<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#009688">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Know the pain and suffering of the patients? Highly empathetic? or Just a good samaritan? Show your love by donating for the cause to blah blah !!!"
        android:textColor="#fff"/>
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:elevation="8dp"
        android:id="@+id/donate_btn"
        app:cardBackgroundColor="#fff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#009688"
        android:textSize="30dp"
        android:id="@+id/donate_txt"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>