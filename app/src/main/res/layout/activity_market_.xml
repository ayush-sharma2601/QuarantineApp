<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#0f5e4d"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the market"
        android:textSize="24sp"
        android:textColor="#FFF"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_name_of_market"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:id="@+id/crowded">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/google_map"
        android:id="@+id/image_location"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crowded"
        android:background="#fff"
        android:textColor="#0f5e4d"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_toRightOf="@id/phone"
        android:id="@+id/tv_crowded"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_name_of_market"
        android:layout_alignBottom="@id/crowded"
        android:id="@+id/phone"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#fff"
            android:src="@drawable/ic_local_phone_black_24dp"
            android:layout_margin="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/tv_phone"
            android:layout_marginLeft="5dp"
            />


    </LinearLayout>

</RelativeLayout>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:queryHint="Items"
        android:backgroundTint="#7BD9D0"
        android:layout_margin="10dp"
        android:id="@+id/search_view"
        android:background="#fff"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_items"
        android:layout_margin="10dp"
        />

</LinearLayout>