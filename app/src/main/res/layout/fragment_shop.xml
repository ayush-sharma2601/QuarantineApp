<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShopFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
    <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_of_shop"
            android:textSize="24sp"
            android:textColor="#0f5e4d"
            android:text="Market Name"
            android:textAlignment="center"
            android:layout_margin="5dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rv_items"
        android:layout_below="@id/name_of_shop"
        android:layout_above="@id/shop_item_add_btn"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/add_button"
        android:id="@+id/shop_item_add_btn"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>

</FrameLayout>